@model ShoopingNo9.Models.StateViewModel
@{
    ViewData["Title"] = "Create";
}

<h4>Departemento/Estado</h4>
<h1>Pais</h1>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddState">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="CountryId"/>
                <partial name="_State"/>
                <br/>
                <div class="form-group mt-2">
                    <input type="submit" value="Crear" class="btn btn-outline-primary" />
                    <a asp-action="Details" asp-route-id="@Model.CountryId" class="btn btn-outline-success">Regresar</a>
                </div> 
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
